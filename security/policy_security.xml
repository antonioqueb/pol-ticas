<odoo>
    <!-- GRUPOS -->
    <record id="group_policy_manager" model="res.groups">
        <field name="name">Administrador de Políticas</field>
        <field name="category_id" ref="base.module_category_hr"/>
    </record>

    <record id="group_policy_user" model="res.groups">
        <field name="name">Usuario de Políticas</field>
        <field name="category_id" ref="base.module_category_hr"/>
    </record>

    <!-- REGLAS DE ACCESO (Record Rules) -->
    <!-- Regla para políticas PÚBLICAS: todos los usuarios pueden leerlas -->
    <record id="policy_public_rule" model="ir.rule">
        <field name="name">Acceso a Políticas Públicas</field>
        <field name="model_id" ref="model_company_policy"/>
        <field name="groups" eval="[(4, ref('group_policy_user')), (4, ref('group_policy_manager'))]"/>
        <field name="domain_force">[('is_confidential','=',False)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Regla para políticas CONFIDENCIALES: solo usuario autorizado o administrador -->
    <record id="policy_confidential_rule" model="ir.rule">
        <field name="name">Acceso a Políticas Confidenciales</field>
        <field name="model_id" ref="model_company_policy"/>
        <field name="groups" eval="[(4, ref('group_policy_user')), (4, ref('group_policy_manager'))]"/>
        <field name="domain_force">[
            '|',
                ('authorized_user_ids', 'in', [user.id]),
                ('is_confidential','=',False)
            ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
