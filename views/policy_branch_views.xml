<odoo>
    <!-- Lista y formulario para gestionar las sucursales -->
    <record id="view_company_policy_branch_tree" model="ir.ui.view">
        <field name="name">company.policy.branch.tree</field>
        <field name="model">company.policy.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_company_policy_branch_form" model="ir.ui.view">
        <field name="name">company.policy.branch.form</field>
        <field name="model">company.policy.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
