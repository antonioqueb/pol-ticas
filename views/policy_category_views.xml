<odoo>
    <!-- Lista en modo jerárquico de las categorías -->
    <record id="view_company_policy_category_tree" model="ir.ui.view">
        <field name="name">company.policy.category.tree</field>
        <field name="model">company.policy.category</field>
        <field name="arch" type="xml">
            <!-- La clave es default_order="parent_left" para mostrar la jerarquía -->
            <tree string="Categorías" default_order="parent_left">
                <field name="name"/>
                <field name="parent_id"/>
                <!-- 'complete_name' se mantiene invisible, pero es útil para búsquedas o debug -->
                <field name="complete_name" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_company_policy_category_form" model="ir.ui.view">
        <field name="name">company.policy.category.form</field>
        <field name="model">company.policy.category</field>
        <field name="arch" type="xml">
            <form string="Categoría de Política">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <!-- Se puede ver la ruta completa de la categoría -->
                        <field name="complete_name" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Subcategorías">
                            <field name="child_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="parent_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="parent_id"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
